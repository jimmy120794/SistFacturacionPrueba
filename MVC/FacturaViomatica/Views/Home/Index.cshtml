@model FacturaViomatica.Models.DB.Cliente

@{
    ViewData["Title"] = "Facturación";
    var total = ViewBag.FacturaDetalles.Count;
    var ident_price = "price_";
    var ident_product = "product_";
    var ident_cant = "cant_";
    var separador = "_";

}

<!--TO_DO: Me falto hacer unas cuantas validaciones al agregar o eliminar <n> cantidad de lineas a la tabla :(, por falta de tiempo...-->

<hr size="7px" style="color:#1b6fc7">
<div class="container">
    <form asp-action="SetFactura">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class=" from-group col-md-6">
                <div class="text-center">
                    <h1 class="display-3" style="color:#1b6fc7"><b>Factura</b></h1>
                </div>
            </div>

            <div class=" from-group col-md-6">
                <label style="width: 49%;">Fecha: <input type="date" id="fechaActual" value="" class="form-control"> </label>
                <label style="width: 50%;">Vence: <input type="date" id="fechaActual2" value="" class="form-control"> </label>
                <label style="width: 100%;">Factura #</b> <input type="text" id="factCode" value="" class="form-control"></label>
            </div>

        </div>
        <br /><br />
        <div class="row">
            <div class=" from-group col-md-6">
                <label><b>Facturar a</b></label>
                <input asp-for="Nombre" type="text" value="Nombre Cliente" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>

                <label></label>
                <input asp-for="Empresa" type="text" value="Nombre Empresa" class="form-control">
                <span asp-validation-for="Empresa" class="text-danger"></span>

                <label></label>
                <input asp-for="DirEmpresa" type="text" value="Dirección Empresa" class="form-control">
                <span asp-validation-for="DirEmpresa" class="text-danger"></span>

                <label></label>
                <input asp-for="TelEmpresa" type="text" value="Tel Empresa" class="form-control">
                <span asp-validation-for="TelEmpresa" class="text-danger"></span>
            </div>

            <div class=" form-group col-md-6">
                <label><b>Enviar a</b></label>
                <input asp-for="Nombre" type="text" value="Nombre Cliente" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>

                <label></label>
                <input asp-for="Empresa" type="text" value="Nombre Empresa" class="form-control">
                <span asp-validation-for="Empresa" class="text-danger"></span>

                <label></label>
                <input asp-for="DirEmpresa" type="text" value="Dirección Empresa" class="form-control">
                <span asp-validation-for="DirEmpresa" class="text-danger"></span>

                <label></label>
                <input asp-for="TelEmpresa" type="text" value="Tel Empresa" class="form-control">
                <span asp-validation-for="TelEmpresa" class="text-danger"></span>

            </div>
        </div>
        <br />
        <table class="table" id="tablaprueba">
            <thead>
                <tr>
                    <th>
                        Código
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Cant.
                    </th>
                    <th>
                        Precio ($)
                    </th>
                    <th>
                        Total ($)
                    </th>
                </tr>
            </thead>
            <tbody id="table-data">
                @for (var i = 0; i < total; i++)
                {
                    <tr>
                        <td>
                            @ViewBag.FacturaDetalles[i].Id
                        </td>
                        <td>
                            <div class="row">
                                <div class="col-md-12">
                                    <form>
                                        <div class="form-group">
                                            <select id=@ident_product@i name=" optionlist" class="form-control" onchange="selectProduct()">
                                                @foreach (var product in ViewBag.AllProducts)
                                                {
                                                    <option>@product.Nombre@separador@product.Precio</option>
                                                }
                                            </select>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </td>
                        <td id=@ident_cant@i>
                            @ViewBag.FacturaDetalles[i].Cantidad
                        </td>
                        <td id=@ident_price@i>

                            @foreach (var product in ViewBag.AllProducts)
                            {
                                @if (@ViewBag.FacturaDetalles[i].IdProducto == product.Id)
                                {
                                    @product.Precio

                                }
                            }
                        </td>
                        <td>
                            <p id=@i>$ -</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <div class="form-group">
            <button type="button" class="btn btn-danger mr-2" onclick="agregarFila()">+ NUEVA FILA</button>
            <button type="button" class="btn btn-warning" onclick="eliminarFila()">- QUITAR FILA</button>
        </div>
        <br />
        <div class="text-right" style="margin-right: 15px;">
            <b>TOTAL: $</b>  <label id="Total_end">0.00</label>
        </div>
        <br />
        @*<div class="row">

            <div class="form-group">
                <input type="submit" value="Facturar" class="btn btn-primary" />
            </div>
        </div>*@
        <br />
    </form>
</div>

<div class="text-center">
    <span>El monto de la factura no incluye el impuesto  sobre las ventas</span>
</div>

<script>

    //Al seleccionar un producto del comboBox

    function selectProduct() {

        var data = [];

        var rows = document.getElementById('table-data').rows;

        for (var i = 0; i < rows.length; i++) {
            data.push([rows[i].cells[2].innerHTML, rows[i].cells[3].innerHTML]);
        }

        var totalTemp = 0
        var totalEnd = 0

        for (var i = 0; i < data.length; i++) {
            totalTemp = 0
            var cleanStr = String(data[i]).replace(/ /g, "").split(',')
            var cant = parseInt(cleanStr[0].replace(/ /g, ""))

        }

        for (var i = 0; i < 100; i++) {


            //Precio item

            strId1 = "price_"+i.toString();

            //Total item
            var strId2 = i.toString();

            if (document.getElementById(strId1) !== null) {

                var strId3 = "product_" + i.toString()

                if (document.getElementById(strId3) !== null) {
                    var x = document.getElementById(strId3).value;
                    var price = x.split('_')[1]

                    document.getElementById(strId1).innerHTML = "$ " + price


                    if (document.getElementById(strId2) !== null) {

                        var cleanStr = String(data[i]).replace(/ /g, "").split(',')
                        var cant = parseInt(cleanStr[0].replace(/ /g, ""))
                        var totalItem = cant * price
                        totalEnd += totalItem

                        document.getElementById(strId2).innerHTML = "$ " + totalItem;

                    }

                }

            }

        }

        document.getElementById("Total_end").innerHTML =  totalEnd;

    }

    //Agregar nueva fila a la tabla de detalle de factura

    const agregarFila = () => {
        const table = document.getElementById('tablaprueba')
        const rowCount = table.rows.length

        document.getElementById('tablaprueba').insertRow(-1).innerHTML += `
        <tr>
            <td id="newCode` + rowCount + `">--</td>
        ` + `
            <td>
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div class="form-group">
                                <select name="optionlist" id="newProduct` + rowCount + `" class="form-control" onchange="newCalc()">
                                    @foreach (var product in ViewBag.AllProducts)
                                    {
                                        <option>@product.Nombre@separador@product.Precio</option>
                                    }
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
            </td>
            <td><input type="number" id="newCant` + rowCount + `" min="1" step="1" value=1 onchange="newCalcCant()" class="form-control"></td>
            <td id="newPrice` + rowCount + `">-</td>
            <td><p id="totalNew` + rowCount + `">-</p></td>

        </tr>


        `

        document.getElementById('newCode' + rowCount).innerHTML = Math.floor((Math.random() * 99) + 1)
    }

    //Elimina un fila de la tabla de detalles de factura

    const eliminarFila = () => {
        const table = document.getElementById('tablaprueba')
        const rowCount = table.rows.length

        if (rowCount <= 1)
            alert('No se puede eliminar el encabezado')
        else

            if (document.getElementById('tablaprueba') != null) {
                var rows = document.getElementById('tablaprueba').rows;
                if (rows.length > 0) {
                    var price_delete_now = rows[rowCount - 1].cells[4].innerHTML
                    var price_delete_now2 = price_delete_now.split("$ ")[1]
                    var price_delete_now3 = price_delete_now2.split("<")[0]

                    var new_total_end_now2 = document.getElementById("Total_end").innerHTML
                    var delete_sale = parseInt(new_total_end_now2) - parseInt(price_delete_now3)
                    document.getElementById("Total_end").innerHTML = delete_sale;
                }
                table.deleteRow(rowCount - 1)
            }

    }

    //Inicializador de fechas y codigo de factura

    window.onload = function () {
        var fecha = new Date();
        var mes = fecha.getMonth() + 1;
        var dia = fecha.getDate();
        var ano = fecha.getFullYear();
        if (dia < 10)
            dia = '0' + dia;
        if (mes < 10)
            mes = '0' + mes

        var aleatorio_code = Math.round(Math.random() * 999999);
        document.getElementById('fechaActual').value = ano + "-" + mes + "-" + dia;
        document.getElementById('fechaActual2').value = ano + "-" + mes + "-" + dia;
        document.getElementById('factCode').value = aleatorio_code;

    }
    //Calculos al seleccionar un producto del comboBox de la nueva linea agregada

    function newCalc() {

        const table = document.getElementById('tablaprueba')
        const rowCount = table.rows.length - 1

        //NEW CANT

        var new_cant = document.getElementById("newCant" + rowCount).value

        //NEW PRICE

        var producto_select_new = document.getElementById("newProduct" + rowCount).value;
        var new_price = producto_select_new.split('_')[1]
        console.log(new_cant, producto_select_new)
        document.getElementById("newPrice" + rowCount).innerHTML = "$ " + parseInt(new_price);

        //NEW TOTAL
        console.log(new_cant, new_price)
        var new_total = parseInt(new_cant) * parseInt(new_price)
        document.getElementById("totalNew" + rowCount).innerHTML = "$ " + new_total;


        //NEW TOTAL END
        var new_total_end = document.getElementById("Total_end").innerHTML
        document.getElementById("Total_end").innerHTML = parseInt(new_total_end) + new_total;


    }

    //Calculos cambiar la cantidad de productos requeridos en la nueva linea agregada

    function newCalcCant() {

        const table = document.getElementById('tablaprueba')
        const rowCount = table.rows.length - 1

        //NEW CANT NOW

        var new_cant_now = document.getElementById("newCant" + rowCount).value

        //NEW PRICE NOW

        var producto_select_new = document.getElementById("newProduct" + rowCount).value;
        var new_price_now = producto_select_new.split('_')[1]

        //NEW TOTAL NOW

        var new_total_now = parseInt(new_cant_now) * parseInt(new_price_now)
        document.getElementById("totalNew" + rowCount).innerHTML = "$ " + new_total_now;

        //NEW TOTAL END NOW
        var new_total_end_now = document.getElementById("Total_end").innerHTML
        document.getElementById("Total_end").innerHTML = parseInt(new_total_end_now) + new_total_now;

    }

</script>





